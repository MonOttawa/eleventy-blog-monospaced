<h1 class="Heading MarginTop-xxl">

    <span class="TitleShadow">Archive</span>

</h1>

{% set archive = collections.posts | groupByYear %}
<section>
    <ul class="ArchiveList MarginTop-l" style="--totalPosts: {{ collections.posts.length + 1 }}">
        {% for year, items in archive %}

            <li class="List-Item">
                <h2 class="Heading">
                    <span class="">{{ year}}</span></h2>
                <ol class="ArchiveList">
                    {% for item in items %}
                        <li>
                            <a class="Link ArchiveList-Link MarginTop-s" href="{{item.url}}">{{ item.data.title }}</a>

                        </li>
                    {% endfor %}
                </ol>

            </li>

        {% endfor %}
    </ul>
</section>

